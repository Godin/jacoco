<project xmlns:au="antlib:org.apache.ant.antunit" xmlns:jacoco="antlib:org.jacoco.ant">

  <target name="testAgent">
    <jacoco:agent property="jacocoagent"/>

    <au:expectfailure>
      <java classname="org.jacoco.ant.TestTarget" fork="true" failonerror="true">
        <classpath path="${org.jacoco.ant.agentTest.classes.dir}"/>
        <jvmarg value="${jacocoagent}"/>
        <!--<jvmarg value="${jacocoagent}"/>-->
        <jvmarg value="-javaagent:/tmp/j/jacoco-0.8.2/lib/jacocoagent.jar"/>
      </java>
    </au:expectfailure>

    <au:assertLogContains text="processing of -javaagent failed"/>
    <au:assertLogContains text="Caused by: java.lang.RuntimeException"/>
  </target>

</project>
